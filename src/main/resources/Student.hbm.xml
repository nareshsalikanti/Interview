<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-cascade="none" default-access="property" default-lazy="true" auto-import="true">

	<class name="com.model.Student" table="STUDENT">

		<id name="id" type="java.lang.Long">
			<column name="ID" />
			<generator class="native" />
		</id>

		<property name="name" type="string" access="field" update="false" column="NAME" length="250" not-null="false"/>

		<list name="classes">  
			<key column="classId"/>  
			<index column="index"/>  
			<element column="class" type="string"/>  
		</list>  
	</class>

	<database-object>
		<create>
			 create unique index ID_INDEX on Student (ID ASC, NAME ASC);
		</create>
		<drop>
			drop index ID_INDEX;
		</drop>
	</database-object>

</hibernate-mapping>